{% extends "base.html.twig" %}

{% block body %}
<div class="container">
    <h2 class="mt-5 mb-5 text-center text-success"> UPDATE MANGA </h2>
    <div class="col-md-6 offset-md-3"></div>
    {{ form_start (form) }}
        <div class="form-group">
            <h6 class="text-primary"> Manga Title </h6>
            {{ form_widget (form.Name, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary"> Manga Author </h6>
            {{ form_widget (form.Author, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary"> Manga Summary </h6>
            {{ form_widget (form.Description, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary"> Manga Price </h6>
            {{ form_widget (form.Price, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary"> Manga Quantity </h6>
            {{ form_widget (form.Quantity, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary"> Manga Date </h6>
            {{ form_widget (form.Date, {'attr' : {'class' : 'form-control'}}) }}
        </div>
       <div class="form-group mt-2">
            <h6 class="text-primary"> Manga Image </h6>
            {{ form_widget (form.Image, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group mt-2">
            <h6 class="text-primary"> Manga Genre </h6>
            {{ form_widget (form.Genre, {'attr' : {'class' : 'form-control'}}) }}
        </div>
        <div class="form-group text-center mt-5">
            <button class="btn btn-info mt-2">Update</button>
        </div>
    {{ form_end (form) }}
</div>
{% endblock %}